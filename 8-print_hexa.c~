#include "main.h"
#include <stdio.h>
#include <stddef.h>
void printer(unsigned int n, char *buffer, int *j, int *count, hex_rep arr[6])
{
	int i;

	if (n % 16 < 10)
	{
		buffer[*j] = (48 + (n % 16));
		(*j)++;
		(*count)++;
		if (*j == 1023)
			reset(buffer, j);
	}
	else
	{
		for (i = 0; i < 6; i++)
		{
			if ((n % 16) == (arr[i].n))
			{
				buffer[*j] = (arr[i].rep);
				(*j)++;
				(*count)++;
				if (*j == 1023)
					reset(buffer, j);
				break;
			}
		}
	}

}
void print_hexa(unsigned int n, char *buffer, int *j, int *count)
{
	hex_rep arr[6] = {
		{10, 'a'},
		{11, 'b'},
		{12, 'c'},
		{13, 'd'},
		{14, 'e'},
		{15, 'f'}
};

	if (n < 16)
	{
		printer(n, buffer, j, count, arr);
	}
	else
	{
		print_hexa(n / 16, buffer, j, count);
		printer(n, buffer, j, count, arr);
	}
}